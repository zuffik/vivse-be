{
  "name": "vivse",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:cmd": "dotenv -c development yarn prisma",
    "prisma:migrate": "yarn prisma:cmd migrate dev",
    "prisma:generate": "yarn prisma:cmd generate",
    "app:generate-key": "node ./bin/app-gen-key.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "9.1.2",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.1.0",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "3.8.1",
    "apollo-server-express": "3.6.2",
    "graphql": "^15",
    "passport": "0.5.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "5.0.0",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "17.1.8",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bcrypt": "5.0.1",
    "chalk": "5.0.0",
    "dotenv": "14.3.2",
    "dotenv-cli": "4.1.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "7.0.4",
    "jest": "^27.2.5",
    "lint-staged": "12.3.1",
    "prettier": "2.5.1",
    "prettier-plugin-prisma": "3.8.0",
    "prettier-plugin-sql": "0.4.1",
    "prisma": "3.8.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "./node_modules/.bin/prettier --write"
    ],
    "prisma/**/*.{sql,prisma}": [
      "./node_modules/.bin/prettier --write"
    ]
  }
}
